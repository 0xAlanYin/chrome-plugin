{
  "manifest_version": 3,
  "name": "网页摘要助手",
  "version": "1.0",
  "description": "使用Gemini-1.5-flash-20240827模型总结网页要点",
  "permissions": ["activeTab", "scripting", "sidePanel"],
  "action": {
    "default_title": "打开网页摘要"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  }
}